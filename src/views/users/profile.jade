include mixins
html
	head
		title App Login & shizzle
		meta( charset='utf-8' )
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
	body
		.container
		script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
		script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
		+nav("ThizApp", "dropdown_menu", "inverse")
			if username
				p logged in as #{username.username}
				+nav_item("/") home
				+nav_item( "/users/"+ username.id, "active" ) view profile 
				+nav_item("/users/messages") write message
				+nav_item("/users/showmessages") show all messages
				+nav_item("/logout") log out


.row
	.col-xs-12
		+panel("My Account")
			h2= username.username
			h3= username.email
			br
			a(href='/users/posts/' + username.id) My messages
			br
			br
			br
			br

.row
	br
	br
	br
	.col-xs-12
		+panel("Footer", "success")
			p This is the footer of this website made by Kevin de Jonge