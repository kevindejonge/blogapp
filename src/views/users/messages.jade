include mixins
html
	head
		title App Login & shizzle
		meta( charset='utf-8' )
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')

	
	body
		.container
		+nav("ThizApp", "dropdown_menu", "inverse")
			+nav_item("/") home
			+nav_item("/users/messages", "active") write message
			+nav_item("/users/showmessages") show all messages
			+nav_item("/logout") log out
.row
	.col-xs-6
		+panel("New Message")
			form(id ="messagetable" action='./messages' method='post')
			
				input(placeholder ="titel" name='titlez' style = "width: 300px;")
				textarea(placeholder = "body" name='bodyz' style = "width: 300px; height: 300px")
				input(type='submit' value='Send')

				