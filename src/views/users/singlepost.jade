include mixins
html
	head
		title App Login & shizzle
		meta( charset='utf-8' )
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
	body
		.container
		+nav("ThizApp", "dropdown_menu", "inverse")
			p loggin in as #{username.username}
			+nav_item("/") home
			+nav_item("/users/messages") write message
			+nav_item("/users/showmessages", "active") show all messages
			+nav_item("/logout") log out
		
.row
	.col-md-4
	.col-sm-6
	.col-xs-12
		+panel("Message")
			h4= post.title
			h5= post.body
			h6 written by: #{post.author}

				ul
				+panel("Comments")
					h3 Comments:
					each comment in allComments
						li= comment.body
						p written by: #{comment.author}

			+panel("Make your comment")
				form(id ="commenttable" action='./comments' method='post')
		
					input(placeholder ="Comment" name='commentz' style = "width: 300px;")
					br
					input(type='submit' value='Send')
.row
	br
	br
	br
	.col-xs-12
		+panel("Footer", "success")
			p This is the footer of this website made by Kevin de Jonge